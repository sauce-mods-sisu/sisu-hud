{
    "manifest_version": 1,
    "name"            : "SISU HUD",
    "description"     : "Simple HUD that pins vital stats directly on your Zwift Rider",
    "author"          : "Ryan McCormick",
    "website_url"     : "",
    "version"         : "0.0.1",
    "content_js": [
        "contents/theme.js"
    ],
    "content_css": [
        "contents/theme.css"
    ],
    "web_root"        : "pages",
    "windows"         : [{
        "file"          : "pages/hud.html",
        "id"            : "sisu-hud",
        "name"          : "SISU HUD",
        "description"   : "Simplified HUD for your Zwift Rider",
        "always_visible": true,
        "overlay"       : true,
        "frame"         : false,
        "default_bounds": {
            "width" : 200,
            "height": 200,
            "x"     : 100,
            "y"     : -100
        }
    }]
}
